{
  "name": "scoreboard-service",
  "version": "1.0.0",
  "description": "Real-time scoreboard API service with live updates",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:docker": "docker-compose -f docker-compose.test.yml up -d && sleep 5 && npm run test:integration && docker-compose -f docker-compose.test.yml down -v",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:docker": "docker-compose -f docker-compose.test.yml up -d && sleep 5 && npm test && docker-compose -f docker-compose.test.yml down -v",
    "migrate": "tsx src/database/migrate.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\" \"*.{json,md}\"",
    "lint:format": "prettier --check \"src/**/*.{ts,json}\" \"*.{json,md}\" && npm run type-check",
    "prepare": "husky"
  },
  "keywords": [
    "scoreboard",
    "leaderboard",
    "real-time",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@types/jest": "^29.5.11",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
